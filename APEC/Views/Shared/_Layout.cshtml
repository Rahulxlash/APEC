                                <li>
                                    <a href="#"><i class="fa fa-envelope-o"></i> info@avaniParidhi.com</a>
                                </li>
                                <li>
                                    <a href="#"><i class="fa fa-phone"></i> +91-9452667888</a>
                                </li>
                            </ul>
                        </div>
                        <div class="col-md-4">
