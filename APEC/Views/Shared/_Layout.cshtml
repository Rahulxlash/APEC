                            <i class="fa fa-bars"></i>
                        </button>
                        <a class="navbar-brand" href="index.html">
                            <img alt="" src="~/images/logo.jpg" style="height:60px;">
                            Avani Paridhi Energy and Communications (P) Ltd.
                        </a>
                    </div>
                    <div class="navbar-collapse collapse" style="height: 79px !important;">
                        <ul class="nav navbar-nav navbar-right">
                            <li>
                                @Html.ActionLink("Home", "Index", "Home", null, new { @class = (ViewContext.RouteData.Values["controller"].ToString() == "Home" ? "active" : "") })
                            </li>
                            <li>
                                @Html.ActionLink("Registration", "Index", "Registration", null, new { @class = (ViewContext.RouteData.Values["controller"].ToString() == "Registration" ? "active" : "") })
                            </li>
                            <li>
                                @Html.ActionLink("Vacancies", "Index", "Vacancies", null, new { @class = (ViewContext.RouteData.Values["controller"].ToString() == "Vacancies" ? "active" : "") })
                            </li>
                            <li>
                                @Html.ActionLink("Downloads", "Index", "Downloads", null, new { @class = (ViewContext.RouteData.Values["controller"].ToString() == "Downloads" ? "active" : "") })
                            </li>
                            <li>
                                @Html.ActionLink("Clients", "Index", "Clients", null, new { @class = (ViewContext.RouteData.Values["controller"].ToString() == "Clients" ? "active" : "") })
                            </li>
                            <li>
                                @Html.ActionLink("News & Gallery", "Index", "NewsGallery", null, new { @class = (ViewContext.RouteData.Values["controller"].ToString() == "Vacancies" ? "active" : "") })
